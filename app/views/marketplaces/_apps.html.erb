  	function scmOption(myRadio) {
  		choose_megam_scm = myRadio.value;
  		switch(choose_megam_scm) {
  		case "byoc_scm":
  			$("#app_byoc_scm").show();
  			$("#app_starter_pack").hide();
  			break;
  		case "starter_pack":
  			$("#app_byoc_scm").hide();
  			$("#app_starter_pack").show();
  			break;
