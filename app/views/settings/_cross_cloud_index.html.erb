<div class="row">
	<div class="col-md-12">
		<div class="widget-box widget-chat nopadding">
			<div class="widget-title">
				<span class="icon"> <i class="fa fa-th-list"></i> </span>
				<h5>Clouds Activity</h5>
				<div class="buttons">
					<%= link_to "http://www.gomegam.com/contact", class: "btn", :target => "_blank" do %>
					<i class="fa fa-star-o">&nbsp;Upgrade</i>
					<% end %>
				</div>
			</div>
			<div class="widget-content nopadding">
				<div class="chat-content panel-left">
					<div class="chat-messages" id="chat-messages">
						<div class="row">
							<div class="col-md-12">
								<div class="col-md-6">
									<h4 align="Center"> <%= link_to "#{@cross_clouds.last[:name]}", setting_path("#{@cross_clouds.last[:name]}",:type => "cross_cloud"), :remote => true, data: { spinlock: '#crosscloud_current'} %> </h4>
								</div>
								<div class="col-md-6">
									<h5 align="Center"><span class="icon"> <i class="fa fa-calendar"></i> </span><b><%= @cross_clouds.last[:created_at] %></b></h5>
								</div>
							</div>
						</div>
						<div class="row">
							<div class="col-md-6"></div>
						</div>
					</div>
					<div class="chat-message well">
						<span class="input-box input-group input-group-lg"> <span class="input-group-btn"> <%= link_to new_cross_cloud_path, class: "btn btn-dark-green btn-lg btn-block", :id => "popover_clouds", :target => "_self" do %> <i class="fa fa-plus-circle">&nbsp;&nbsp;Create a New Target Cloud&nbsp;&nbsp;</i> <% end %> </span>
							<input placeholder="Choose your cloud (AWS, hp, Profitbricks,GCE)..." type="text" class="form-control" disabled name="msg-box" id="msg-box" />
						</span>
					</div>
				</div>
				<div class="chat-users panel-right">
					<div class="panel-title">
						<h5>Clouds usage <a href="http://support.megam.co/kb/cloud-applications/" class="pull-right" target="_blank"><i class="fa fa-question-circle"> Help</i> </a></h5>
					</div>
					<div class="panel-content nopadding">
						<ul class="contact-list">
							<li class="online new">
								<h5 align="center" ><span class="icon"><i class="fa fa-book"></i></span>&nbsp;Used
								<%= @cross_clouds.count %>&nbsp;Allowed 20</h5>
								<% @percent = @cross_clouds.count/20.0*100 %>

								<div class="progress">
									<% if @percent >= 80 %>
									<div class="progress-bar progress-bar-warning" style="width: <%= @percent %>%;"></div>
									<% else %>
									<div class="progress-bar progress-bar-success" style="width: <%= @percent %>%;"></div>
									<% end %>
								</div>
							</li>
						</ul>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>
<div class="row">
	<div class="col-md-12">
		<div class="widget-box nopadding">
			<div class="widget-title">
				<span class="icon"> <i class="fa fa-th"></i> </span>
				<h5>Clouds</h5>
			</div>
			<div class="widget-content nopadding">
				<table class="table table-bordered table-striped table-hover">
					<thead>
						<tr>
							<th>Actions</th>
							<th>Name</th>
							<th>Created At</th>
						</tr>
					</thead>
					<tbody>
						<% @cross_clouds.each do |pre_cl| %>
						<tr>
							<td align="center"> <%= link_to setting_path(pre_cl[:name], :type => "cross_cloud"), :data => {:keyboard=>"false", :backdrop =>"false", :remote => true},
							:class => "btn btn-dark-blue" do %> <i class="fa fa-file-text">&nbsp;View</i> <% end %> </td>
							<td align="center"> <%= pre_cl[:name] %></td>
							<td align="center"><span class="icon"> <i class="fa fa-calendar"></i> </span> <%= pre_cl[:created_at] %></td>
						</tr>
						<% end %>
					</tbody>
				</table>
			</div>
		</div>
	</div>
</div>
<div id="cross_cloud_show_popup" class="modal fade" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
	<div class="modal-dialog">
		<div class="modal-content">
			<div class="modal-header">
				<button type="button" class="close" data-dismiss="modal" aria-hidden="true">
					Ã—
				</button>
				<h3 id="myModalLabel">View Cloud</h3>
			</div>
			<div class="modal-body">
				<div class="alert alert-info">
					<p>
						<h4 id="cross_cloud_show"></h4>
					</p>
				</div>
			</div>
			<div class="modal-footer">
				<button class="btn btn-pink" data-dismiss="modal">
					Ok
				</button>
			</div>
		</div>
	</div>
</div>
