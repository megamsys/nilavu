<% if @err_msg != nil %>

var selected_entity = '#cloud_tool_setting_postfinish_popup_error';
$("#err_msg").html('<%= @err_msg %>');
$(selected_entity).modal({backdrop : false,keyboard: false,show : true});

<% else %>

var selected_entity = '#cloud_tool_setting_postfinish_popup';

$("#cloudtoolsettings_path").append('<%= link_to  "Ok", settings_path, :class => "btn btn-primary", :target => "_self" %>');
$("#res_msg").append('<%= @res_msg %>');
$(selected_entity).modal({backdrop : false,keyboard: false,show : true});

<% end %>