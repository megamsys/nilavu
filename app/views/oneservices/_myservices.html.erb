<% content_for :onecat_contents do %>
<% provide(:title, 'Service Overview') %>
<div class="rt-box col-xs-12 col-sm-8 col-md-9 col-lg-9 col-xl-9">
	<div class="row c_pading-b15 settings_top">
		<div class="margin_15">
			<div class="col-xs-9 col-sm-6 col-md-7">
				<h3> Services Overview </h3>
			</div>
			<%= render :partial => "users/topright_icons" %>
		</div>
	</div>
	<div class="row">
		<div class="mplace mplace-head">
			<div class="col-xs-6 col-md-3 mplace-left">
				<h4> Services Overview </h4>
			</div>
			<div class="col-xs-12 col-md-9 mplace-middle hidden-xs hidden-sm">
				<span class="pull-right c_small">Overview of you service.<i class="c_icon-rocket"></i><a href="http://docs.megam.io/v1.0/docs/postgresql" target="_blank">Take a Tour</a></span>
			</div>
		</div>
	</div>
	<!-- TITLE BOX ENDS HERE -->
	<div class="row">
		<div class="margin_15 overview margintb_15">
			<div class="overview-top">
				<div class="col-xs-12 col-sm-12 col-md-6 overview-route">
					<span>URL: </span><a href="http://<%= assembly.name  %>.<%= assembly.inputs.select { |x| x["key"] == "domain" }[0]['value'] %>" target="_blank"><%= assembly.name  %>.<%= assembly.inputs.select { |x| x["key"] == "domain" }[0]['value'] %></a>
				</div>
			</div>
		</div>
		<div class="margin_30 bottom-divider"></div>
	</div>
	<div class="clearfix"></div>
	<div class=" overview margintb_15 vm-overview">
		<div class="vm-bg">
			<div class="overview-top ">
				<div class="col-xs-12 col-sm-4 col-md-6 overview-git row vm-icons">
					<label class="col-md-6"><i class="fa fa-hdd-o"></i> Available RAM </label>
					<span1>
						768 MB
					</span1>
				</div>
				<div class="col-xs-12 col-sm-4 col-md-6 overview-git row vm-icons">
					<label class="col-md-6"><i class="fa fa-columns"></i> CPU Core </label>
					<span1>
						1 VCPU
					</span1>
				</div>
			</div>
			<div class="overview-top ">
				<div class="col-xs-12 col-sm-4 col-md-6 overview-git row vm-icons">
					<label class="col-md-6"><i class="fa fa-puzzle-piece"></i> IP </label>
					<span1>
						IPADDRESS
					</span1>
				</div>
				<div class="col-xs-12 col-sm-4 col-md-6 overview-git row vm-icons">
					<label class="col-md-6"><i class="fa fa-building-o"></i> Architecture </label>
					<span1>
						AMD64
					</span1>
				</div>
			</div>
			<div class="overview-top">
				<div class="col-xs-12 col-sm-4 col-md-6 overview-git row vm-icons">
					<label class="col-md-6"> <i class="fa fa-bullseye"></i> OS </label>
					<span1 style="border-bottom:none;">
						<%= image_tag  "logos/#{assembly.tosca_type.split('.').last}.png", :alt => "" %>
					</span1>
				</div>
				<div class="col-xs-12 col-sm-4 col-md-6 overview-git row vm-icons">
					<label class="col-md-6"><i class="fa fa-lock"></i> SSH Key </label>
					<span1>
						<%= assembly.inputs.select { |x| x["key"] == "sshkey" }[0]['value'] %>
					</span1>
				</div>
			</div>
		</div>
	</div>
	<br/>
	<div class="row">
		<div class="margin_30 c_pading-b15">
			<div class="portlet-body-head">
				<div class="col-xs-12 col-sm-12 col-md-6 row">
					<i class="c_icon-layer_lg"></i>Bound Apps <span><%= @bound_apps.size%> apps bound</span>
				</div>
				<div class="col-xs-12 col-sm-12 col-md-6 create_bind row">
					<ul class="list-inline">
						<li class=" col-md-offset-6 col-sm-6">
							<i class="icon-plus"></i> <%= link_to "Create App", marketplaces_path, :remote => true %>
						</li>
					</ul>
				</div>
			</div>
		</div>
	</div>
	<br/>
	<div class="margin_30 bottom-divider"></div>
	<%= render :partial => 'catalogs/flysolo', :locals => {:asmgroups_flatten => @bound_apps, :filter_cattype => Assemblies::APP} %>
</div>
<% end %>
<%= render :template => 'catalogs/show',:locals => {:cattype => Assemblies::SERVICE} %>
