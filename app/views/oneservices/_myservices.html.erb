<% content_for :onecat_contents do %>
<% provide(:title, 'Service Overview') %>
<div class="rt-box col-xs-12 col-sm-8 col-md-9 col-lg-9 col-xl-9">
	<div class="row c_pading-b15 settings_top">
		<div class="margin_15">
			<div class="col-xs-9 col-sm-6 col-md-7">
					<h3> <%= t('titles.service_overview') %>  </h3>
			</div>
			<%= render :partial => "users/topright_icons" %>
		</div>
	</div>
	<div class="row">
		<div class="mplace mplace-head">
			<div class="col-xs-6 col-md-3 mplace-left">
				<h4> <%= t('titles.service_overview') %> </h4>
			</div>
			<div class="col-xs-12 col-md-9 mplace-middle hidden-xs hidden-sm">
				<span class="pull-right c_small"><%= t('overviews.overview_service') %><i class="c_icon-rocket"></i><a href="http://docs.megam.io/v1.0/docs/postgresql" target="_blank"><%= t('login.tour') %></a></span>
			</div>
		</div>
	</div>
	<!-- TITLE BOX ENDS HERE -->
	<div class="row">
		<div class="margin_15 overview margintb_15">
			<div class="overview-top">
				<div class="col-xs-12 col-sm-12 col-md-6 overview-route">
					<span><%= t('overviews.url') %> </span><a href="http://<%= assembly.name  %>.<%= assembly.inputs.select { |x| x["key"] == "domain" }[0]['value'] %>" target="_blank"><%= assembly.name  %>.<%= assembly.inputs.select { |x| x["key"] == "domain" }[0]['value'] %></a>
				</div>
			</div>
		</div>
		<div class="margin_30 bottom-divider"></div>
	</div>
	<div class="clearfix"></div>
	<div class=" overview margintb_15 vm-overview">
		<div class="vm-bg">
			<div class="overview-top ">
				<div class="col-xs-12 col-sm-4 col-md-6 overview-git row vm-icons">
					<label class="col-md-6"><i class="fa fa-hdd-o"></i> <%= t('overviews.available_ram') %> </label>
					<span1>
						<%= assembly.inputs.select { |x| x["key"] == "ram" }[0]['value'] %> <%= t('overviews.mb') %>
					</span1>
				</div>
				<div class="col-xs-12 col-sm-4 col-md-6 overview-git row vm-icons">
					<label class="col-md-6"><i class="fa fa-columns"></i> <%= t('overviews.cpu_core') %> </label>
					<span1>
						<%= assembly.inputs.select { |x| x["key"] == "cpu" }[0]['value'] %>
					</span1>
				</div>
			</div>
			<div class="overview-top ">
				<div class="col-xs-12 col-sm-4 col-md-6 overview-git row vm-icons">
					<label class="col-md-6"><i class="fa fa-puzzle-piece"></i> <%= t('overviews.ip') %> </label>
					<span1>
						<% ip = parse_key_value_pair(assembly.outputs, "ip") %>
						<%= ip if ip != "" %>
						<%= t('overviews.not_get_ip') if ip == "" %>
					</span1>
				</div>
				<div class="col-xs-12 col-sm-4 col-md-6 overview-git row vm-icons">
					<label class="col-md-6"><i class="fa fa-building-o"></i> <%= t('overviews.port') %> </label>
					<span1>
						<%= 8098 if "#{assembly.components[0][0].components.tosca_type.split('.').last}" == "riak" %>
						<%= 5432 if "#{assembly.components[0][0].components.tosca_type.split('.').last}" == "postgresql" %>
						<%= 5672 if "#{assembly.components[0][0].components.tosca_type.split('.').last}" == "rabbitmq" %>
						<%= 6379 if "#{assembly.components[0][0].components.tosca_type.split('.').last}" == "redis" %>
					</span1>
				</div>
			</div>
			<div class="overview-top">
				<div class="col-xs-12 col-sm-4 col-md-6 overview-git row vm-icons">
					<label class="col-md-6"> <i class="fa fa-bullseye"></i> <%= t('overviews.os') %> </label>
					<span1 style="border-bottom:none;">
						<%= image_tag  "mlogos/#{assembly.tosca_type.split('.').last}.png", :alt => "" %>
					</span1>
				</div>
				<div class="col-xs-12 col-sm-4 col-md-6 overview-git row vm-icons">
					<label class="col-md-6"><i class="fa fa-plug"></i> <%= t('overviews.key') %> </label>
					<span1>
						<%= link_to "#{assembly.inputs.select { |x| x["key"] == "sshkey" }[0]['value']}", edit_ssh_key_path(:id => assembly.inputs.select { |x| x["key"] == "sshkey" }[0]['value']+"_key"), :class => "hint  hint--bottom", :target => "_self", 'data-hint' => "Click here to download private key" %>
					</span1>
				</div>
			</div>
		</div>
	</div>
	<div class="clearfix"></div>
	<div class=" overview margintb_15 vm-overview">
		<div class="vm-bg" >
		<div style="margin-left: 15px;">
		<div class="overview-top row">
		<% assembly.components[0][0].components.inputs.each do |input| %>
			<% if !input['value'].empty? %>
			<div class="col-xs-12 col-sm-4 col-md-6 overview-git row vm-icons">
					<label class="col-md-6"> <i class="fa fa-flash"></i> <%= input['key']%> </label>
					<span1 style="border-bottom:none;">
						<%= input['value'] %>
					</span1>
			</div>
			<% end %>
		<% end %>
		</div>
		</div>
		</div>
	</div>
	<br/>
	<div class="row">
		<div class="margin_30 c_pading-b15">
			<div class="portlet-body-head">
				<div class="col-xs-12 col-sm-12 col-md-6 row">
					<i class="c_icon-layer_lg"></i><%= t('overviews.bound_app') %> <span><%= @bound_apps.size%> <%= t('overviews.app_bound') %></span>
				</div>
				<div class="col-xs-12 col-sm-12 col-md-6 create_bind row">
					<ul class="list-inline">
						<li class=" col-md-offset-6 col-sm-6">
							<i class="icon-plus"></i> <%= link_to t('marketplace.create_app'), marketplaces_path, :remote => true %>
						</li>
					</ul>
				</div>
			</div>
		</div>
	</div>
	<br/>
	<div class="margin_30 bottom-divider"></div>
	<div class="row">
	<%= render :partial => 'catalogs/flysolo', :locals => {:asmgroups_flatten => @bound_apps, :filter_cattype => Assemblies::APP} %>
	</div>
</div>
<% end %>
<%= render :template => 'catalogs/show',:locals => {:cattype => Assemblies::SERVICE} %>
