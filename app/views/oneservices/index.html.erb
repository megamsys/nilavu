<!-- APP START MODAL -->
<div class="modal fade app_exist" id="one_service_start" tabindex="-1" role="basic" aria-hidden="true">
	<div class="modal-dialog">
		<%= form_tag service_request_path, multipart: true, :novalidate => 'novalidate',  :method => 'post', :remote => true  do %>
		<div class="modal-content c_modal-content">
			<div class="modal-header">
				<button type="button" class="close" data-dismiss="modal" aria-hidden="true"></button>
				<h4 class="modal-title">Start App</h4>
			</div>
			<div class="modal-body text-center">
				<span id="one_start_service_id"></span>
				<span id="one_start_service_name"></span>
				<%= hidden_field_tag 'command', nil, placeholder: "", :class =>"form-control", :value => "componentstart"  %>
				Are you sure you want to start the App?
			</div>
			<div class="modal-footer c_modal-footer">
				<button type="button" class="btn default" data-dismiss="modal">
					Cancel
				</button>
				<%= submit_tag "Confirm", :class => "btn btn-success", data: { disable_with: "Please wait..." } %>
			</div>
		</div>
		<% end %>
		<!-- /.modal-content -->
	</div>
	<!-- /.modal-dialog -->
</div>
<!-- /.modal -->

