<div class="modal-body text-center">
	<div class="input-group margin-top-10">
		<%= text_field_tag 'profitbricks_access_key', nil, placeholder: 'Enter ProfitBricks Username ' , :required => true, :class =>"form-control" %>
		<span class="input-group-addon" ><i class="icon-question-sign" ></i></span>
	</div>

	<div class="input-group margin-top-10">
		<%= text_field_tag 'profitbricks_secret_key', nil, placeholder: 'Enter ProfitBricks password', :required => true, :class =>"form-control" %>
		<span class="input-group-addon" ><i class="icon-question-sign" ></i></span>
	</div>

	

	<input type="hidden" name="cloud" value="profitbricks">

</div>
<div class="modal-footer c_modal-footer">
	<div class="col-xs-12 col-sm-6 col-md-6 col-lg-6 col-xl-6">
		<%= submit_tag "Login with ProfitBricks", :style => "width:250px; height:50px;", data: { disable_with: "Accessing ProfitBricks..." }, :class => "btn btn-default c_btn_gplus" %>
	</div>
	<div class="col-xs-12 col-sm-6 col-md-6 col-lg-6 col-xl-6">
		<a href="http://www.profitbricks.com/"> Create a new profitbricks account </a>
	</div>
</div>
