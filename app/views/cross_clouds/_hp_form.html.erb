<div class="row cloud_signup_save">
	<div class="col-xs-12 col-sm-6 col-md-6 col-lg-6 col-xl-6">

	</div>

	<div class="col-xs-12 col-sm-6 col-md-6 col-lg-6 col-xl-6">
		<h5>Save My Cloud As</h5>
		<div class="input-group margin-top-10" style="width:100%">
			<%= text_field_tag 'name', nil, placeholder: 'Enter a name to save', :required => true, :class =>"form-control" %>
			<span class="input-group-addon" style="width:35px" ></span>
		</div>
	</div>
</div>

<input type="hidden" name="hp_access_key" value="<%= credentials['hp_access_key'] %>">
<input type="hidden" name="hp_secret_key" value="<%= credentials['hp_secret_key'] %>">
<input type="hidden" name="tenant_id" value="<%= credentials['tenant_id'] %>">

<input type="hidden" name="provider" value="<%= selected_cloud %>">

<div class="row cloud_signup_save">
	<div class="col-xs-12 col-sm-6 col-md-6 col-lg-6 col-xl-6">
		<h5>Image & Size</h5>

		<div class="input-group margin-top-10">
			<%= label_tag 'Region'%>
			<%= text_field_tag 'zone', "#{credentials['region']}", readonly: true, :required => true, :class =>"form-control" %>
			<span class="input-group-addon" ><i class="icon-question-sign" style=""></i></span>
		</div>

		<div class="input-group margin-top-10">
			<%= label_tag 'Group'%>
			<%= text_field_tag 'group', nil, placeholder: 'Enter Group name', :required => true, :class =>"form-control" %>
			<span class="input-group-addon" ><i class="icon-question-sign" style=""></i></span>
		</div>

		<div class="input-group margin-top-10">
			<%= label_tag 'Image'%>
			<%= select_tag :image, options_for_select(@images.map{ |c| "Name:#{c['name']}, Id:#{c['id']}" }), { :class => 'form-control' }%>
			<span class="input-group-addon" ><i class="icon-question-sign" style=""></i></span>
		</div>

		<div class="input-group margin-top-10">
			<%= label_tag 'Flavor'%>
			<%= select_tag :flavor, options_for_select(@flavors.map{ |c| "Name:#{c['name']}, Id:#{c['id']}" }), { :class => 'form-control' }%>
			<span class="input-group-addon" ><i class="icon-question-sign" style=""></i></span>
		</div>

	</div>

	<div class="col-xs-12 col-sm-6 col-md-6 col-lg-6 col-xl-6">
		<h5>Security</h5>

		<div class="input-group margin-top-10">
			<%= label_tag 'Keypair'%>
			<%= select_tag :ssh_key, options_for_select(@keypairs.map{ |c| "#{c}" }), { :class => 'form-control' }%>
			<span class="input-group-addon" ><i class="icon-question-sign" ></i></span>
		</div>

		<div class="input-group margin-top-10">
			<%= label_tag 'Sshuser'%>
			<%= text_field_tag 'ssh_user', nil, placeholder: 'Enter SSH User' , :required => true, :class =>"form-control" %>
			<span class="input-group-addon" ><i class="icon-question-sign" ></i></span>
		</div>

		<div class="input-group margin-top-10">
			<%= label_tag 'SSHkey'%>
			<%= select_tag :id_rsa_public_key, options_for_select(@ssh_keys.map{ |c| c[:name] }), { :class => 'form-control' }%>

			<span class="input-group-addon" ><i class="icon-question-sign" ></i></span>
		</div>

		<div class="input-group margin-top-10">
			<br/>
			<%= submit_tag "Create", :style => "width:150px; height:50px;", :class => "btn green settings_create" %>

		</div>

	</div>
</div>
