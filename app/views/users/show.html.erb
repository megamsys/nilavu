<div class="container-fluid main-cover">
  <div class="row">
   <div class="col-xs-12 col-sm-3 col-md-2 c_bg_white cover">
      <div class="row">
        <div class="page-sidebar navbar-collapse collapse">
          <!-- BEGIN SIDEBAR MENU -->
          <ul class="page-sidebar-menu">
            <li></li>


	<!-- BEGIN NOTIFICATION DROPDOWN -->
    <li class="dropdown" id="header_notification_bar">
       <a href="#" class="dropdown-toggle btn btn-success btn-menu-top" data-toggle="dropdown" data-hover="dropdown"
          data-close-others="true"><span class="caret"></span>new
       
       </a>
       <ul class="dropdown-menu extended notification left-dd-top">
          <li>
             <ul class="dropdown-menu-list scroller">
                <li>  
                   <a href="#">
                   <span class="label label-sm label-icon label-success"><i class="glyphicon glyphicon-user"></i></span>
                   Torpedo
                   </a>
                </li>
                <li>  
                   <a href="#">
                   <span class="label label-sm label-icon label-success"><i class="glyphicon glyphicon-cog"></i></span>
                   Apps
                   </a>
                </li>
                <li>  
                   <a href="#">
                   <span class="label label-sm label-icon label-danger"><i class="glyphicon glyphicon-off"></i></span>
                   Services
                   </a>
                </li>
                <li>  
                   <a href="#">
                   <span class="label label-sm label-icon label-danger"><i class="glyphicon glyphicon-off"></i></span>
