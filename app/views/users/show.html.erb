             </ul>
          </li>
       </ul>
    </li>


            <li class= "start active">
              <%= link_to cockpits_path, :data => { :remote => true}, :target => "_self" do %>
                <i class="icon-dashboard pull-left"></i>
                <span class="title pull-left"><%= t('titles.dashboard_title') %></span>
                <span class="hidden-xs selected" id="left_dash"></span>
              <% end %>
            </li>
            <li class= "start active">
              <%= link_to catalogs_path(:cattype => Assemblies::TORPEDO ), :data => { :remote => true}, :onclick => "$('#left_dash, #left_dew, #left_app, #left_service, #left_ssh, #left_billing').removeClass('hidden-xs selected'); $('#left_dew').addClass('selected'); $('#step-0').fadeOut(); $('#step-1').fadeOut();" do %>
                <i class="icon-bar-chart pull-left"></i>
                <span class="title pull-left"><%= t('cockpits.torpedo_tab') %></span>
                <span class="hidden-xs" id="left_dew"></span>
              <% end %>
            </li>
            <li class= "start active">
              <%= link_to catalogs_path(:cattype => Assemblies::APP), :data => { :remote => true},  :onclick => "$('#left_dash, #left_dew, #left_app, #left_service, #left_addon, #left_ssh, #left_billing').removeClass('hidden-xs selected'); $('#left_app').addClass('selected'); $('#step-0').fadeOut(); $('#step-1').fadeOut();" do %>
                <i class="icon-credit-card pull-left"></i>
                <span class="title pull-left"><%= t('cockpits.apps_tab') %></span>
                <span class="hidden-xs" id='left_app'></span>
              <% end %>
            </li>
            <li class= "start active">
              <%= link_to catalogs_path(:cattype => Assemblies::SERVICE),:data => { :remote => true},   :onclick => "$('#left_dash, #left_dew, #left_app, #left_service, #left_addon, #left_ssh, #left_billing').removeClass('hidden-xs selected'); $('#left_service').addClass('selected'); $('#step-0').fadeOut(); $('#step-1').fadeOut();" do %>
                <i class="icon-tasks pull-left"></i>
                <span class="title pull-left"><%= t('cockpits.services_tab') %></span>
                <span class="hidden-xs" id="left_service"></span>
              <% end %>
            </li>
            <li class= "start active">
              <%= link_to catalogs_path(:cattype =>Assemblies::MICROSERVICES), :data => { :remote => true},  :onclick => "$('#left_dash, #left_dew, #left_app, #left_service, #left_addon, #left_ssh, #left_billing').removeClass('hidden-xs selected'); $('#left_addon').addClass('selected'); $('#step-0').fadeOut(); $('#step-1').fadeOut();" do %>
                <i class="icon-pushpin pull-left"></i>
                <span class="title pull-left"><%= t('cockpits.micro_services_tab') %></span>
                <span class="hidden-xs" id="left_addon"></span>
              <% end %>
            </li>
            <li class= "start active">
              <%= link_to ssh_keys_path, :data => { :remote => true},  :onclick => "$('#left_dash, #left_dew, #left_app, #left_service, #left_addon, #left_ssh, #left_billing').removeClass('hidden-xs selected'); $('#left_ssh').addClass('selected'); $('#step-0').fadeOut(); $('#step-1').fadeOut();" do %>
                <i class="icon-key pull-left"></i>
                <span class="title pull-left"><%= t('titles.ssh_title') %></span>
                <span class="hidden-xs" id="left_ssh"></span>
              <% end %>
            </li>
            <li class= "start active">
            <%  if Ind.billings %>
              <%= link_to billings_path, :data => { :remote => true},  :onclick => "$('#left_dash, #left_dew, #left_app, #left_service, #left_addon, #left_ssh, #left_billing').removeClass('hidden-xs selected'); $('#left_billing').addClass('selected'); $('#step-0').fadeOut(); $('#step-1').fadeOut();" do %>
                <i class="icon-money pull-left"></i>
                <span class="title pull-left"><%= t('titles.billing_title') %></span>
                <span class="hidden-xs" id="left_billing"></span>
                <% end %>
                <% end %>
            </li>
          </ul>
          <!-- END SIDEBAR MENU -->
        </div>
      </div>
    </div>
    <div id="content">
      <%= content_for?(:content_settings) ? yield(:content_settings) : yield %>
    </div>
  </div>
</div>
<%= render 'layouts/footer' %>
