<%= render 'layouts/header' %>
<div class="container main-cover">
  <div class="row">
    <div class="col-xs-12 col-sm-4 col-md-3 col-lg-3 col-xl-3 c_bg_white cover c_bg_white_override">
      <div class="row">
        <div class="page-sidebar navbar-collapse collapse">
          <!-- BEGIN SIDEBAR MENU -->
          <ul class="page-sidebar-menu">
            <li></li>
            <li class= "start active">
              <%= link_to cockpits_path, :data => { :remote => true}, :target => "_self" do %>
                <i class="icon-dashboard pull-left"></i>
                <span class="title pull-left">Dashboard</span>
                <span class="hidden-xs selected" id="left_dash"></span>
              <% end %>
            </li>
            <li class= "start active">
              <%= link_to catalogs_path(:cattype => Assemblies::TORPEDO ), :data => { :remote => true}, :onclick => "$('#left_dash, #left_dew, #left_app, #left_service, #left_ssh, #left_billing').removeClass('hidden-xs selected'); $('#left_dew').addClass('selected');" do %>
                <i class="icon-bar-chart pull-left"></i>
                <span class="title pull-left">Torpedo</span>
                <span class="hidden-xs" id="left_dew"></span>
              <% end %>
            </li>
            <li class= "start active">
              <%= link_to catalogs_path(:cattype => Assemblies::APP), :data => { :remote => true},  :onclick => "$('#left_dash, #left_dew, #left_app, #left_service, #left_addon, #left_ssh, #left_billing').removeClass('hidden-xs selected'); $('#left_app').addClass('selected');" do %>
                <i class="icon-credit-card pull-left"></i>
                <span class="title pull-left">Apps</span>
                <span class="hidden-xs" id='left_app'></span>
              <% end %>
            </li>
            <li class= "start active">
              <%= link_to catalogs_path(:cattype => Assemblies::SERVICE),:data => { :remote => true},   :onclick => "$('#left_dash, #left_dew, #left_app, #left_service, #left_addon, #left_ssh, #left_billing').removeClass('hidden-xs selected'); $('#left_service').addClass('selected');" do %>
                <i class="icon-tasks pull-left"></i>
                <span class="title pull-left">Services</span>
                <span class="hidden-xs" id="left_service"></span>
              <% end %>
            </li>
            <li class= "start active">
              <%= link_to catalogs_path(:cattype =>Assemblies::ADDON), :data => { :remote => true},  :onclick => "$('#left_dash, #left_dew, #left_app, #left_service, #left_addon, #left_ssh, #left_billing').removeClass('hidden-xs selected'); $('#left_addon').addClass('selected');" do %>
                <i class="icon-pushpin pull-left"></i>
                <span class="title pull-left">Addons</span>
                <span class="hidden-xs" id="left_addon"></span>
              <% end %>
            </li>
            <li class= "start active">
              <%= link_to ssh_keys_path, :data => { :remote => true},  :onclick => "$('#left_dash, #left_dew, #left_app, #left_service, #left_addon, #left_ssh, #left_billing').removeClass('hidden-xs selected'); $('#left_ssh').addClass('selected');" do %>
                <i class="icon-key pull-left"></i>
                <span class="title pull-left">SSH keys</span>
                <span class="hidden-xs" id="left_ssh"></span>
              <% end %>
            </li>
            <li class= "start active">
              <%= link_to billings_path, :data => { :remote => true},  :onclick => "$('#left_dash, #left_dew, #left_app, #left_service, #left_addon, #left_ssh, #left_billing').removeClass('hidden-xs selected'); $('#left_billing').addClass('selected');" do %>
                <i class="icon-money pull-left"></i>
                <span class="title pull-left">Billings</span>
                <span class="hidden-xs" id="left_billing"></span>
              <% end %>
            </li>
          </ul>
          <!-- END SIDEBAR MENU -->
        </div>
      </div>
    </div>
    <div id="content">
      <%= content_for?(:content_settings) ? yield(:content_settings) : yield %>
    </div>
  </div>
</div>
<%= render 'layouts/footer' %>
